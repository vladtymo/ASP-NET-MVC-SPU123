@model Data.Entities.Product;

<h1>Create New Product</h1>

<form asp-action="Create" method="post" class="row g-3">
    <div class="col-md-12">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Enter product name">
    </div>
   
    <div class="col-md-6">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" type="number" class="form-control" placeholder="Enter product price">
    </div>
    <div class="col-md-6">
        <label asp-for="Discout" class="form-label">Discount</label>
        <input asp-for="Discout" type="number" class="form-control" placeholder="Enter product discount">
    </div>
    <div class="col-md-12">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select asp-for="CategoryId" class="form-select">
            <option value="1" selected>Electronics</option>
            <option value="2">Sport</option>
            <option value="3">Fashion</option>
        </select>
    </div>
    <div class="col-md-12">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter product description"></textarea>
    </div>
    <div class="col-12">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck">
            <label class="form-check-label" for="gridCheck">
                In Stock
            </label>
        </div>
    </div>

    <div class="col-6">
        <a asp-action="Index" class="btn btn-secondary w-100">Back</a>
    </div>
    <div class="col-6">
        <button type="submit" class="btn btn-success w-100">Create</button>
    </div>
</form>